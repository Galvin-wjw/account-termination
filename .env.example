# AWS Account Termination Solution - Environment Configuration
# Copy this file to .env and configure the values for your environment

# =============================================================================
# AWS Configuration
# =============================================================================

# AWS Region where the solution will be deployed
AWS_REGION=us-east-1

# AWS Account ID (automatically detected if not set)
# AWS_ACCOUNT_ID=123456789012

# =============================================================================
# Deployment Configuration
# =============================================================================

# Environment (dev, staging, prod)
ENVIRONMENT=prod

# Notification email for alerts and status updates
NOTIFICATION_EMAIL=admin@company.com

# =============================================================================
# AWS Organizations Configuration
# =============================================================================

# ARN of the role in the management account that can perform Organizations operations
# This role should have permissions to move accounts and initiate closure
MANAGEMENT_ACCOUNT_ROLE_ARN=arn:aws:iam::MANAGEMENT-ACCOUNT-ID:role/AccountTermination-ManagementAccount-Role

# Organizational Unit ID where suspended accounts should be moved
# Find this in the AWS Organizations console
SUSPENDED_OU_ID=ou-root-suspended123

# =============================================================================
# Network Configuration (Optional)
# =============================================================================

# Existing VPC ID to use (if not provided, a new VPC will be created)
# VPC_ID=vpc-12345678

# Comma-separated list of private subnet IDs (required if VPC_ID is provided)
# PRIVATE_SUBNET_IDS=subnet-12345678,subnet-87654321

# Comma-separated list of security group IDs (optional)
# SECURITY_GROUP_IDS=sg-12345678,sg-87654321

# =============================================================================
# Third-Party Vendor Configuration
# =============================================================================

# Prisma Cloud API Configuration
PRISMA_API_URL=https://api.prismacloud.io
PRISMA_API_KEY=your-prisma-api-key
PRISMA_SECRET_KEY=your-prisma-secret-key

# =============================================================================
# Monitoring and Logging Configuration
# =============================================================================

# Log level for Lambda functions (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# CloudWatch log retention in days
LOG_RETENTION_DAYS=30

# =============================================================================
# Security Configuration
# =============================================================================

# Enable deletion protection for production resources
DELETION_PROTECTION=true

# Enable point-in-time recovery for DynamoDB
ENABLE_POINT_IN_TIME_RECOVERY=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Test account ID for validation (should be a non-production account)
# TEST_ACCOUNT_ID=999999999999

# Enable dummy mode for testing without actual API calls
# DUMMY_MODE=false